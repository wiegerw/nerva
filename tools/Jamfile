project nerva_tools
   : requirements
       <library>/nerva//nervalib
       <linkflags>-lpython3.10  # TODO: find a better way to do this
   ;

exe mlpd : mlp.cpp : <scalar>double ;
exe mlp : mlp.cpp : <scalar>float ;
exe mkl : mkl.cpp : <scalar>float ;

install dist
  :
    mkl
    mlp
    mlpd
  ;
