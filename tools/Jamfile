project nerva_tools
   : requirements
       <library>/nerva//nervalib
       <linkflags>-lpython3.10  # TODO: find a better way to do this
   ;

exe mlpcolwisedouble : mlp.cpp : <scalar>double <orientation>colwise ;
exe mlprowwisedouble : mlp.cpp : <scalar>double <orientation>rowwise ;
exe mlpcolwise : mlp.cpp : <scalar>float <orientation>colwise ;
exe mlprowwise : mlp.cpp : <scalar>float <orientation>rowwise ;
exe mkl  : mkl.cpp : <scalar>float ;

install dist
  :
    mkl
    mlpcolwise
    mlprowwise
    mlpcolwisedouble
    mlprowwisedouble
  ;
