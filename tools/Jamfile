project nerva_tools
   : requirements
       <library>/nerva//nervalib
       <linkflags>-lpython3.10  # TODO: find a better way to do this
   ;

exe mlpd : mlp.cpp : <scalar>double ;
exe mlpcolwise : mlp.cpp : <scalar>float <orientation>colwise ;
exe mlprowwise : mlp.cpp : <scalar>float <orientation>rowwise ;
exe mkl  : mkl.cpp : <scalar>float ;

install dist
  :
    mkl
    mlpcolwise
    mlprowwise
    mlpd
  ;
