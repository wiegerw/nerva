project nerva_tools
   : requirements
       <library>/nerva//nervalib
       <linkflags>-lpython3.10  # TODO: find a better way to do this
   ;

exe mlpd : mlp.cpp : <scalar>double <orientation>colwise ;
exe mlp  : mlp.cpp : <scalar>float  <orientation>colwise ;
exe mkl  : mkl.cpp : <scalar>float  <orientation>colwise ;

install dist
  :
    mkl
    mlp
    mlpd
  ;
