project nerva_tools
   : requirements
       <library>/nerva//nervalib
       <linkflags>-lpython3.10  # TODO: find a better way to do this
   ;

exe mlpd : mlp.cpp : <scalar>double <define>NERVA_COLWISE ;
exe mlp : mlp.cpp : <scalar>float <define>NERVA_COLWISE ;
exe mkl : mkl.cpp : <scalar>float <define>NERVA_COLWISE ;

install dist
  :
    mkl
    mlp
    mlpd
  ;
